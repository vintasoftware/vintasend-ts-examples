{
  "extends": "@tsconfig/node22/tsconfig.json",
  "version": "5.6.3",
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM",
      "es2021"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "name": "nextjs-prisma-nodemailer-pug-temporal",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "biome check ./src",
    "format": "biome format ./src",
    "check": "biome check --apply ./src",
    "prisma": "prisma",
    "notifications-worker": "tsx src/workers/notifications/worker.ts",
    "notifications-worker:dev": "nodemon --watch src/workers/notifications/worker.ts --exec tsx src/workers/notifications/worker.ts",
    "pending-notifications-client": "tsx src/cron-client/notifications/client.ts",
    "pending-notifications-client:dev": "nodemon --watch src/workers/notifications/client.ts --exec tsx src/cron-client/notifications/client.ts",
    "db:push": "dotenv -e .env prisma db push",
    "db:studio": "dotenv -e .env prisma studio",
    "prisma:generate": "dotenv -e .env prisma generate"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@prisma/client": "^6.3.1",
    "@radix-ui/themes": "^3.2.0",
    "@temporalio/activity": "^1.11.7",
    "@temporalio/client": "^1.11.7",
    "@temporalio/worker": "^1.11.7",
    "@temporalio/workflow": "^1.11.7",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.475.0",
    "next": "15.1.6",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "passport-local": "^1.0.0",
    "pug": "^3.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "vintasend": "^0.1.16",
    "vintasend-nodemailer": "^0.1.16",
    "vintasend-prisma": "^0.1.16",
    "vintasend-pug": "^0.1.16",
    "vintasend-winston": "^0.1.16",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tsconfig/node22": "^22.0.0",
